        <div class="col"><img src="~/assets/g11.jpg" alt="" /></div>
        <div class="col"><img src="~/assets/g12.jpg" alt="" /></div>
    </div>
</section>

<div class="fill">
    <p>@Localizer["calendar"]</p>
</div>

<section id="sectionCalendar">
    <div id="calendar"></div>
</section>

<section id="contact" class="row row-cols-2 row-cols-md-4 gx-5">
    <div class="col contact-col">
        <img src="~/assets/telephone-round-line-black.svg" alt="" />
