</div>

<section id="about-me">
    <p>@Localizer["hi"]</p>
    <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Localizer["description_of_me"]</p>
</section>

<div id="filler2" class="fill">
    <p>@Localizer["my_offer"]</p>
</div>

<section id="offer" class="row row-cols-1 row-cols-lg-3 gx-0">
