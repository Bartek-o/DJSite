<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DJSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navigation.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tui-calendar.css" />
</head>
<body>
    <header>
        @{
            Html.RenderPartial("Navigation");
        }
    </header>

    <main class="container-fluid">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - DJSite - 
            <div style="float: right;">
            @Html.ActionLink("English", "ChangeLanguage", "Home", new {language = "en"})
            @Html.ActionLink("Polski", "ChangeLanguage", "Home", new {language = "pl"})
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/navigation.js" asp-append-version="true"></script>
    <script src="https://uicdn.toast.com/tui.code-snippet/v1.5.2/tui-code-snippet.min.js"></script>
    <script src="~/js/tui-calendar.js"></script>
    <script src="~/js/calendar.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
